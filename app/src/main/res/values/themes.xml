<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Q" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/shabnam</item>
    </style>


    <style name="CustomMaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:layoutDirection">rtl</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBody</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonText</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonText</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogNeutralButtonText</item>
        <item name="shapeAppearanceOverlay">
            @style/Base.ShapeAppearanceOverlay.MaterialAlertDialog.Material3
        </item>
    </style>
    <style name="Base.ShapeAppearanceOverlay.MaterialAlertDialog.Material3" parent="">
        <item name="cornerSize">16dp</item>
    </style>
    <style name="AlertDialogTitle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/shabnam</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="FilterTitle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/shabnam</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AlertDialogBody" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:fontFamily">@font/shabnam</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AlertDialogButtonText" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/shabnam</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">#858585</item>
    </style>
    <style name="AlertDialogNeutralButtonText" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:fontFamily">@font/shabnam</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="rippleColor">@color/red</item>
    </style>

</resources>